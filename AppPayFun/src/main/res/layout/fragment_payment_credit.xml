<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <!--    Fragment Creadit Top View   -->
    <include
        android:id="@+id/fragment_credit_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        layout="@layout/item_credit_card_top"
        />

    <!--    payFun Status View  -->
    <TextView
        android:id="@+id/fragment_credit_tvPaymentStatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/small_text_size"
        />

    <!--    Input Amount View   -->
    <include
        android:id="@+id/fragment_creadit_input_money_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        layout="@layout/item_input_amount"
        />

    <!--    credit monthly payment View    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="100"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/str_creadit_installment"
            />

        <Spinner
            android:id="@+id/edCreditMonth"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="30"

            android:gravity="center_vertical|center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/str_creadit_num_of_month"
            />

        <Button
            android:id="@+id/btnMember"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_member_apply_selector"
            android:text="@string/str_creadit_apply_membership"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnCoupon"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:background="@drawable/button_apply_coupon_selector"
            android:text="@string/str_creadit_apply_cupon"
            />
    </LinearLayout>

    <!--    Signpad View    -->
    <include
        android:id="@+id/viewSign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        layout="@layout/signpad"
        android:visibility="invisible"
        />

    <include
        android:id="@+id/viewFootButtons"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        layout="@layout/item_yes_no_buttons"
        />
</android.support.v7.widget.LinearLayoutCompat>