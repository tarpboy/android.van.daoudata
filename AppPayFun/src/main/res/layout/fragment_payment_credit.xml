<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        />
    <!--    Fragment Credit Top View   -->
    <include
        android:id="@+id/fragment_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        layout="@layout/item_credit_card_top"
        />

    <!--    payFun Status View  -->
    <TextView
        android:id="@+id/fragment_credit_tvPaymentStatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="start|bottom"
        android:text="결제금액"
        android:textSize="@dimen/large_text_size"
        />

    <!--    Input Amount View   -->
    <include
        android:id="@+id/fragment_creadit_input_money_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        layout="@layout/item_input_amount"
        />

    <!--    credit monthly payment View    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="100"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/str_creadit_installment"
            />

        <Spinner
            android:id="@+id/edCreditMonth"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="50"

            android:gravity="center_vertical|center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/str_creadit_num_of_month"
            />
<!--
        <Button
            android:id="@+id/btnMember"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_member_apply_selector"
            android:text="@string/str_creadit_apply_membership"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnCoupon"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:background="@drawable/button_apply_coupon_selector"
            android:text="@string/str_creadit_apply_cupon"
            />
-->
    </LinearLayout>

    <!--    Signpad View    -->
    <LinearLayout
        android:id="@+id/signPadContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:background="@drawable/signpad_white_shape"
        android:weightSum="100"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:text="사인해주세요"
            android:textSize="@dimen/default_text_size"
            />
        <include
            android:id="@+id/viewSignPad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="93"
            layout="@layout/signpad"
            android:visibility="invisible"
            android:layout_margin="10dp"
            />
    </LinearLayout>

<!--
    <include
        android:id="@+id/viewSignPad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        layout="@layout/signpad"
        android:visibility="invisible"
        android:layout_margin="10dp"
        />
-->
    <include
        android:id="@+id/viewFootButtons"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        layout="@layout/item_yes_no_buttons"
        />
</android.support.v7.widget.LinearLayoutCompat>