<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <include
        android:id="@+id/fragment_history_mode_selector"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        layout="@layout/item_history_mode_selector"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <include
            android:id="@+id/fragment_history_day_selector"
            layout="@layout/item_history_day_selector"
            />
        <include
            android:id="@+id/fragment_history_month_selector"
            layout="@layout/item_history_month_selector"
            android:visibility="gone"
            />
        <include
            android:id="@+id/fragment_history_quarter_selector"
            layout="@layout/item_history_quarter_selector"
            android:visibility="gone"
            />
    </LinearLayout>

    <include
        android:id="@+id/fragment_history_list_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        layout="@layout/item_history_list_title"
        />

    <ListView
        android:id="@+id/fragment_history_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        >

    </ListView>
</android.support.v7.widget.LinearLayoutCompat>